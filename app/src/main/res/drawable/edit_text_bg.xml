<?xml version="1.0" encoding="utf-8"?>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- Bo tròn góc -->
        <corners android:radius="8dp" />

        <!-- Nền màu trắng -->
        <solid android:color="@color/white" />

        <!-- Viền xung quanh màu xám nhạt -->
        <stroke
            android:width="1dp"
            android:color="@color/white" /> <!-- Màu viền xám nhạt -->

        <!-- Padding bên trong -->
        <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />
    </shape>

